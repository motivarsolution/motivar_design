<Window x:Class="MOTIVAR.pages.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MOTIVAR.pages"
        mc:Ignorable="d"
        Name="MainWindows"
        Title="Main" 
        WindowState="Normal"
        WindowStartupLocation="Manual"
        Icon="../resource/images/Icon.png"
        Background="#FFCEEAE5"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        Height="768"
        Width="1366"
        MinHeight="768"
        MinWidth="1366"
        Loaded="MainWindows_Loaded">
    <Grid Name="MainGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="49"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Name="MainLeftSidebar"
                      HorizontalAlignment="Left"
                      Background="Gray"
                      Width="200"
                      Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="--- Menu ---" Margin="0 20 0 0" FontSize="30" FontWeight="Heavy" Foreground="White" HorizontalAlignment="Center"/>
                        <ListView Background="Gray" Margin="0 10 0 0" BorderBrush="Transparent">
                            <ListViewItem>
                                <TextBlock Text="Menu1" FontSize="30" Foreground="WhiteSmoke"/>
                            </ListViewItem>
                            <ListViewItem>
                                <TextBlock Text="Menu2" FontSize="30" Foreground="WhiteSmoke"/>
                            </ListViewItem>
                            <ListViewItem>
                                <TextBlock Text="Menu3" FontSize="30" Foreground="WhiteSmoke"/>
                            </ListViewItem>
                            <ListViewItem>
                                <TextBlock Text="Menu4" FontSize="30" Foreground="WhiteSmoke"/>
                            </ListViewItem>
                            <ListViewItem>
                                <TextBlock Text="Menu5" FontSize="30" Foreground="WhiteSmoke"/>
                            </ListViewItem>
                        </ListView>
                    </StackPanel>
                </Grid>
                <Grid Name="UserControlGrid" 
                      Background="Crimson"
                    Grid.Column="1">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Name="TextTestWidth"
                                   Text="Width" 
                                   HorizontalAlignment="Center"
                                   FontSize="150" />
                        <TextBlock Name="TextTestHeight"
                                   Text="Height" 
                                   HorizontalAlignment="Center"
                                   FontSize="150" />
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Row="1"
                  Background="DimGray">
            </Grid>
        </Grid>
        
        <DockPanel>
            <Menu Background="#FFCEEAE5" 
                  DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
                <MenuItem Header="_View">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>

    </Grid>
</Window>
