<Window x:Class="MOTIVAR.pages.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MOTIVAR.pages"
        mc:Ignorable="d"
        Name="MainWindows"
        Title="Main" 
        WindowState="Maximized"
        WindowStartupLocation="Manual"
        Icon="../resource/images/Icon.png"
        Background="#FFCEEAE5"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Height="1080" Width="1920" Loaded="MainWindows_Loaded">
    <Grid Name="MainGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="107"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Background="WhiteSmoke">
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Name="MainLeftSidebar"
                      HorizontalAlignment="Left"
                      Background="Azure"
                      Width="180"
                      Grid.Column="0">
                </Grid>
                <Grid Name="UserControlGrid" 
                    Grid.Column="1">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Name="TextTestWidth"
                                   Text="Width" 
                                   HorizontalAlignment="Center"
                                   FontSize="150" />
                        <TextBlock Name="TextTestHeight"
                                   Text="Height" 
                                   HorizontalAlignment="Center"
                                   FontSize="150" />
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Row="2"
                  Background="Wheat">
            </Grid>
        </Grid>
        
        <DockPanel>
            <Menu Background="#FFCEEAE5" 
                  DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
                <MenuItem Header="_View">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>

    </Grid>
</Window>
